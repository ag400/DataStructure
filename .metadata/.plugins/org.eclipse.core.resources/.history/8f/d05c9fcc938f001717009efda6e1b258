
public class Totality {
	
	public int sum(int[] a, String stype) {
        // you add code here
		int total = 0;
		int i = 0;
		while (i < a.length) {
			if(stype == "all") {
				total = total + a[i];
				i = i + 1;
			} else if(stype == "even") {
				total = total + a[i];
				i = i + 2;
			} else if(stype == "odd") {
				total = total + a[i+1];
				i = i + 2;
			} 			
		}
		return total;
    }

}
