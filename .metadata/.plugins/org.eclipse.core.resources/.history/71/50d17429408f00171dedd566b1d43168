
public class Totality {
	
	public int sum(int[] a, String stype) {
        // you add code here
		
		for(int i=0; i<a.length; i+=1) {
			int total = 0;
			if(stype == "all") {
				total=total + a[i];
			}
			return total;
		}
		
		for(int i=0; i<a.length; i+=2) {
			int total = 0;
			if(stype == "even") {
				total = total + a[i];
			}
			return total;
		}
		
		for(int i=1; i<a.length; i=i+2) {
			int total = 0;
			if(stype == "odd") {
				total = total + a[i];
			}
			return total;
		}
        System.out.println("What!!!");
        return -1;
    }

}
