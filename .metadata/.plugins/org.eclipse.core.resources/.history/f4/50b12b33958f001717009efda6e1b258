
public class Totality {
	
	public int sum(int[] a, String stype) {
        // you add code here
		int total = 0;
		for (int i=0; i<a.length;) {
			if (stype == "all") {
				total+=a[i];
				i++;
			}
			
			if (stype == "even") {
				total+=a[i];
				i = i+2;
			}
			
			if (stype == "odd") {
				total+=a[i+1];
				i = i+2;
			}
		}
		return total;
	}
}
